{
    "Input simple": {
        "prefix": "tca-input",
        "body": [
            "'${1:fieldname}' => [",
            "    'label' => '${2:label}',",
            "    'config' => [",
            "        'type' => 'input',",
            "    ],",
            "],"
        ],
        "description": "Input simple"
    },
    "Input with placeholder": {
        "prefix": "tca-input",
        "body": [
            "'${1:fieldname}' => [",
            "    'label' => '${2:label}',",
            "    'config' => [",
            "        'type' => 'input',",
            "        'placeholder' => '${3:placeholder}',",
            "        'eval' => 'null',",
            "        'default' => null,",
            "        'mode' => 'useOrOverridePlaceholder',",
            "    ],",
            "],"
        ],
        "description": "Input with placeholder"
    },
    "Input link": {
        "prefix": "tca-input",
        "body": [
            "'${1:fieldname}' => [",
            "    'label' => '${2:label}',",
            "    'config' => [",
            "        'type' => 'input',",
            "        'renderType' => 'inputLink',",
            "    ],",
            "],"
        ],
        "description": "Input link"
    },
    "Input slider": {
        "prefix": "tca-input",
        "body": [
            "'${1:fieldname}' => [",
            "    'label' => '${2:label}',",
            "    'config' => [",
            "        'type' => 'input',",
            "        'size' => 10,",
            "        'eval' => 'trim,int',",
            "        'range' => [",
            "            'lower' => ${3:-100},",
            "            'upper' => ${4:100},",
            "        ],",
            "        'default' => 0,",
            "        'slider' => [",
            "            'step' => 10,",
            "            'width' => ${5:200},",
            "        ],",
            "    ],",
            "],"
        ],
        "description": "Input slider"
    },
    "Input datetime": {
        "prefix": "tca-input",
        "body": [
            "'${1:fieldname}' => [",
            "    'label' => '${2:label}',",
            "    'config' => [",
            "        'type' => 'input',",
            "        'renderType' => 'inputDateTime',",
            "        'eval' => 'datetime',",
            "    ],",
            "],"
        ],
        "description": "Input datetime"
    }
}